        <script type="text/javascript" src="{$basePath}/js/jquery.easing.1.3.js"></script>
        <script type="text/javascript" src="{$basePath}/js/jquery.skitter.min.js"></script>
        <script type="text/javascript" src="{$basePath}/js/jquery.magnific-popup.js"></script>
        <script src="{$basePath}/js/main.js"></script>
	{/block}
